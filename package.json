{
  "name": "webpack5-tailwindcss3-swc-starter",
  "version": "1.0.0",
  "description": "Webpack 5 configuration for Single or Multipage websites using Tailwind CSS 3, PostCSS and SWC",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development --config config/webpack.config.dev.js --env development",
    "build": "webpack --config config/webpack.config.prod.js",
    "lint": "eslint --ext .js ./src/js",
    "lint:fix": "eslint --ext .js --fix ./src/js",
    "stylelint": "stylelint ./src/sass/**/*.css"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack multipage",
    "webpack tailwindcss",
    "tailwindcss",
    "tailwindcss 3",
    "swc"
  ],
  "author": "Elena Bravo",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "1.2.208",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "4.0.0",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "5.0.0",
    "fibers": "5.0.1",
    "file-loader": "6.2.0",
    "html-loader": "3.1.2",
    "html-webpack-live-reload-plugin": "1.0.12",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "mini-css-extract-plugin": "2.6.1",
    "postcss": "8.4.14",
    "postcss-loader": "7.0.0",
    "postcss-preset-env": "7.7.2",
    "prettier": "2.7.1",
    "replace-ext": "2.0.0",
    "style-loader": "3.3.1",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "swc-loader": "0.2.3",
    "tailwindcss": "3.1.4",
    "terser-webpack-plugin": "5.3.3",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elenabravo/webpack5-tailwindcss3-swc-starter"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint"
    }
  },
  "optionalDependencies": {
    "@swc/core-darwin-x64": "1.2.208"
  }
}
